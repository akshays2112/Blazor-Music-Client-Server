<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Sync Music From External Sources</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        @if (IsLoggedIntoSpotify && IsLoggedIntoGoogle)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="/findandaddspotifysongsforexistingyoutubemusicvideos">
                    <span class="oi oi-plus" aria-hidden="true"></span>Transfer Songs
                </NavLink>
            </li>
        }
        else
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="/Identity/Account/Login">
                    <span class="oi oi-plus" aria-hidden="true"></span>Login
                </NavLink>
            </li>
        }
    </ul>
</div>

@code {
    public static bool IsLoggedIntoSpotify = false;
    public static bool IsLoggedIntoGoogle = false;
    public static bool IsLoggedIntoTwitter = false;
    public static bool IsLoggedIntoFacebook = false;

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
